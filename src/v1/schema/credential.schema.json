{
  "type": "object",
  "properties": {
    "@context": {
      "oneOf": [
        {
          "type": "string",
          "const": "https://www.w3.org/2018/credentials/v1"
        },
        {
          "type": "array",
          "prefixItems": [
            {
              "type": "string",
              "const": "https://www.w3.org/2018/credentials/v1"
            }
          ],
          "items": { "oneOf": [{ "type": "string" }, { "type": "object" }] }
        }
      ]
    },
    "id": {
      "type": "string",
      "pattern": "^(.+:)+(//)?(.+)"
    },
    "type": {
      "oneOf": [
        {
          "type": "string",
          "const": "VerifiableCredential"
        },
        {
          "type": "array",
          "prefixItems": [
            {
              "type": "string",
              "const": "VerifiableCredential"
            }
          ],
          "items": { "type": "string" }
        }
      ]
    },
    "issuer": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(.+:)+(//)?(.+)"
        },
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^(.+:)+(//)?(.+)"
            }
          },
          "required": ["id"]
        }
      ]
    },
    "issuanceDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-((0[13578]|1[02])-(0[1-9]|[12][0-9]|3[01])|(0[469]|11)-(0[1-9]|[12][0-9]|30)|(02)-(0[1-9]|[12][0-9]))T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|[1-5][0-9]):(0[0-9]|[1-5][0-9]).[0-9]{3}Z$"
    },
    "expirationDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-((0[13578]|1[02])-(0[1-9]|[12][0-9]|3[01])|(0[469]|11)-(0[1-9]|[12][0-9]|30)|(02)-(0[1-9]|[12][0-9]))T(0[0-9]|1[0-9]|2[0-3]):(0[0-9]|[1-5][0-9]):(0[0-9]|[1-5][0-9]).[0-9]{3}Z$"
    },

    "credentialStatus": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^(.+:)+(//)?(.+)"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"]
    },

    "credentialSubject": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^(.+:)+(//)?(.+)"
            }
          }
        },
        {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^(.+:)+(//)?(.+)"
              }
            }
          }
        }
      ]
    }
  },
  "required": [
    "@context",
    "type",
    "issuer",
    "issuanceDate",
    "credentialSubject"
  ],
  "additionalProperties": false
}
